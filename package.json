{
  "name": "wanderoot",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Wanderoot Team"
  },
  "description": "A Wanderoot Game",
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.wanderoot.app",
    "productName": "Wanderoot",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.{mp3,wav}"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder --win portable --dir"
  },
  "dependencies": {
    "@pixi/react": "^8.0.1",
    "@reduxjs/toolkit": "^2.6.1",
    "@types/lodash": "^4.17.16",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "howler": "^2.2.4",
    "lodash": "^4.17.21",
    "pixi.js": "^8.9.1",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.0",
    "seedrandom": "^3.0.5",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/howler": "^2.2.11",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  }
}
